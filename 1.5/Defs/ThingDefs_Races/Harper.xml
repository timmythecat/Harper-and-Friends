<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <AlienRace.ThingDef_AlienRace ParentName="BasePawn">
        <defName>harperRace</defName>
        <label>Raven Gryphon</label>
        <description>Adds Harper to Rimworld</description>

        <alienRace>
            <graphicPaths>
                <body>
                    <path>Harper/Body/</path>
                </body>
                <head>
                    <path>Harper/Heads/</path>
                </head>
                <skeleton>
                    <path>Sol/Dessicated/Dessicated_Solstice_east</path>
                </skeleton>
                <skull>
                    <path>Textures/Other/Average_Normal_east</path>
                </skull>

                
            </graphicPaths> 

            <styleSettings>
                    <li>
                        <key>HairDef</key>
                        <value>
                            <hasStyle>false</hasStyle>
                        </value>
                    </li>
                    <li>
                        <key>BeardDef</key>
                        <value>
                            <hasStyle>false</hasStyle>
                        </value>
                    </li>
                    <li>
                        <key>TattooDef</key>
                        <value>
                            <hasStyle>false</hasStyle>
                        </value>
                    </li>
                </styleSettings>

            <generalSettings>
                <maleGenderProbability>0.7</maleGenderProbability>
                <immuneToAge>false</immuneToAge>
                <minAgeForAdulthood>12</minAgeForAdulthood>
                <allowHumanBios>true</allowHumanBios>

                <canLayDown>true</canLayDown>

                <maxDamageForSocialfight>15</maxDamageForSocialfight>

                <lovinIntervalHoursFromAge>
                    <points>
                        <li>(8, 1.4)</li>
                        <li>(20, 1.5)</li>
                        <li>(30, 3)</li>
                        <li>(50, 10)</li>
                        <li>(70, 20)</li>
                    </points>
                </lovinIntervalHoursFromAge>

                <growthAges>
                    <li>3</li>
                    <li>7</li>
                    <li>10</li>
                    <li>12</li>
                </growthAges>

                <disallowedTraits>
                    <li>
                        <defName>Psychopath</defName>
                    </li>
                </disallowedTraits>

                <raceGenes>
                    <li>
                        <defName>Gryphon_Skin</defName>
                        <chance>100</chance>
                    </li>
                </raceGenes>

                <reproduction>
                    <!-- Reproduction settings are listed here -->
                    <femaleFertilityAgeFactor>
                        <points>
                            <li>(16, 0)</li>
                            <li>(20, 1)</li>
                            <li>(28, 1)</li>
                            <li>(40, 0.8)</li>
                            <li>(45, 0)</li>
                        </points>
                    </femaleFertilityAgeFactor>

                    <maleFertilityAgeFactor>
                        <points>
                            <li>(16, 0)</li>
                            <li>(18, 1)</li>
                            <li>(40, 1)</li>
                            <li>(50, 0)</li>
                        </points>
                    </maleFertilityAgeFactor>

                    <hybridSpecific>
                        <li>
                            <partnerRace>SolRace</partnerRace>
                            <probability>50</probability>
                            <childKindDef>HarperColonist</childKindDef>
                        </li>
                        <li>
                            <partnerRace>SolRace</partnerRace>
                            <probability>50</probability>
                            <childKindDef>SolColonist</childKindDef>
                        </li>
                    </hybridSpecific>
                </reproduction>

                <alienPartGenerator>
                    <bodyTypes>
						<li>Male</li>
						<li>Female</li>
                        <li MayRequire="Ludeon.RimWorld.Biotech">Baby</li>
						<li MayRequire="Ludeon.RimWorld.Biotech">Child</li>
					</bodyTypes>

                    <headTypes Inherit="False">
                        <li>Male_AverageNormal</li>
                        <li>Female_AverageNormal</li>
                    </headTypes>
                    <headOffsetDirectional>
                        <east>
                            <headTypes>
                                <Male_AverageNormal>(0.35, 0.0)</Male_AverageNormal>
                                <Female_AverageNormal>(0.35, 0.0)</Female_AverageNormal>
                            </headTypes>
                        </east>
                        <west>
                            <headTypes>
                                <Male_AverageNormal>(-0.35, 0.0)</Male_AverageNormal>
                                <Female_AverageNormal>(-0.35, 0.0)</Female_AverageNormal>
                            </headTypes>
                        </west>
                    </headOffsetDirectional>

                    <customDrawSize>(2.4, 2.4)</customDrawSize>
                    <customPortraitDrawSize>(1.9, 1.9)</customPortraitDrawSize>
                    <customPortraitHeadDrawSize>(0.9, 0.9)</customPortraitHeadDrawSize>
                    <customHeadDrawSize>(1.2, 1.2)</customHeadDrawSize>
                    <borderScale>4.0</borderScale>
                    <atlasScale>3</atlasScale>

                    <colorChannels>
                        <li>
                            <name>skin</name>
							<first Class="ColorGenerator_Options">
								<options>
									<li>
										<weight>100</weight>
										<only>RGBA(210, 255, 255, 255)</only>
									</li>
								</options>
							</first>
                            <second Class="AlienRace.ColorGenerator_CustomAlienChannel">
                                <colorChannel>skin_1</colorChannel>
                            </second>
                        </li>
                    </colorChannels>
                </alienPartGenerator>
            </generalSettings>

            <raceRestriction>
                <onlyUseRaceRestrictedWeapons>true</onlyUseRaceRestrictedWeapons>
                <onlyUseRaceRestrictedApparel>true</onlyUseRaceRestrictedApparel>
                <onlyUseRaceRestrictedXenotypes>true</onlyUseRaceRestrictedXenotypes>

                <whiteApparelList>
                     <li>Apparel_PackControl</li>
                     <li>Apparel_ArrayHeadset</li>
                     <li>Apparel_AirwireHeadset</li>
                     <li>Apparel_IntegratorHeadset</li>
                </whiteApparelList>

                <geneList>
                    <li>Gryphon_Skin</li>
                </geneList>
            </raceRestriction>

            <compatibility>
                <isFlesh>true</isFlesh>
                <isSentient>true</isSentient> 
                <hasBlood>true</hasBlood>
            </compatibility>
        </alienRace>

        <race>
            <thinkTreeMain>Humanlike</thinkTreeMain>
			<thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
			<intelligence>Humanlike</intelligence>
			<makesFootprints>true</makesFootprints>
			<lifeExpectancy>70</lifeExpectancy>
			<leatherDef>Feather_Harper</leatherDef>
			<nameCategory>HumanStandard</nameCategory>
			<body>QuadrupedAnimalWithWingsAndBeak</body>
			<baseBodySize>4</baseBodySize>
			<baseHealthScale>6</baseHealthScale>
			<foodType>CarnivoreAnimal, OmnivoreHuman</foodType>
            <baseHungerRate>0.50</baseHungerRate>
			<gestationPeriodDays>25</gestationPeriodDays>
			<meatMarketValue>0.1</meatMarketValue>
			<manhunterOnDamageChance>1.2</manhunterOnDamageChance>
			<manhunterOnTameFailChance>0.5</manhunterOnTameFailChance>

            <renderTree>Humanlike</renderTree>
            <bloodDef>Filth_Blood</bloodDef>
            <bloodSmearDef>Filth_BloodSmear</bloodSmearDef>
            <knowledgeCategory MayRequire="Ludeon.RimWorld.Anomaly">Basic</knowledgeCategory>
            <anomalyKnowledge>2</anomalyKnowledge>

            <lifeStageAges>
				<!-- These affect stats and if your Race is ready to Lay eggs or be milked if you set that up in the LifeStage, it also determins when your Race is Sexualy Mature and can Reproduce which is not used by Humanlikes in Vanilla -->
                <li Class="AlienRace.LifeStageAgeAlien">
                        <def>HumanlikeBaby</def>
                        <minAge>0</minAge>
                        <customDrawSize>(1, 1)</customDrawSize>
                        <customHeadDrawSize>(0.01, 0.01)</customHeadDrawSize>
                </li>
                <li Class="AlienRace.LifeStageAgeAlien">
                    <def>HumanlikeChild</def>
                    <minAge>3</minAge>
                    <customDrawSize>(1.6, 1.6)</customDrawSize>
                    <customHeadDrawSize>(0.01, 0.01)</customHeadDrawSize>
                </li>
                <li Class="AlienRace.LifeStageAgeAlien">
                    <def>HumanlikeTeenager</def>
                    <minAge>7</minAge>
                    <customDrawSize>(2, 2)</customDrawSize>
                </li>
                <li>
                    <def>HumanlikeAdult</def>
                    <minAge>12</minAge>
                </li>
            </lifeStageAges>
          
            <soundMeleeHitPawn>Harper_Call</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Harper_Call</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
			<soundMeleeDodge>Pawn_MeleeDodge</soundMeleeDodge>

            <litterSizeCurve>
				<points>
					<li>(0.5, 0)</li>
					<li>(1, 1)</li>
					<li>(1.01, 0.05)</li>
					<li>(2, 0)</li>
				</points>
			</litterSizeCurve>

            <ageGenerationCurve>
                <points>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(0,0)</li>
					<li MayRequire="Ludeon.RimWorld.Biotech">(0.1,10)</li>
					<li MayRequire="Ludeon.RimWorld.Biotech">(0.9,30)</li>
					<li MayRequire="Ludeon.RimWorld.Biotech">(1.5,100)</li>
					<li MayRequire="Ludeon.RimWorld.Biotech">(2.9,0)</li>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(3,0)</li>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(3.1,0)</li>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(3.5,100)</li>
                    <li MayRequire="Ludeon.RimWorld.Biotech">(8,100)</li>
                    <li>(12,0)</li>
                    <li>(15,100)</li>
                    <li>(30,100)</li>
                    <li>(35,30)</li>
                    <li>(40,18)</li>
                    <li>(45,10)</li>
                    <li>(50,3)</li>
                    <li>(60,0)</li>
                </points>
            </ageGenerationCurve>
        </race>

        <comps>
            <li Class="HarperAndFriends.CompProperties_Preenable">
                <featherDef>Feather_Harper</featherDef>
                <featherIntervalDays>7</featherIntervalDays>
                <featherAmount>10</featherAmount>
                <minAge>7</minAge>
            </li>
        </comps>

        <recipes>
            <li>RemoveBodyPart</li>
            <li>Anesthetize</li>
            <li>CureScaria</li>
            <li MayRequire="Ludeon.RimWorld.Biotech">TerminatePregnancy</li>
            <li MayRequire="Ludeon.RimWorld.Biotech">ImplantIUD</li>
            <li MayRequire="Ludeon.RimWorld.Biotech">RemoveIUD</li>
            <li MayRequire="Ludeon.RimWorld.Royalty">CureBloodRot</li>
            <li MayRequire="Ludeon.rimwolrd.Royalty">InstallNeurocalculator</li>
            <li MayRequire="Ludeon.rimwolrd.Royalty">RemoveNeurocalculator</li>
            <li MayRequire="Ludeon.rimwolrd.Royalty">InstallLearningAssistant</li>
            <li MayRequire="Ludeon.rimwolrd.Royalty">RemoveLearningAssistant</li>
            <li MayRequire="Ludeon.rimwolrd.Royalty">InstallNuclearStomach</li>
            <li MayRequire="Ludeon.rimwolrd.Royalty">InstallLoveEnhancer</li>
        </recipes>

        <statBases>
            <MarketValue>4000</MarketValue>
            <ArmorRating_Blunt>1.2</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
            <ArmorRating_Heat>2</ArmorRating_Heat>
            <MoveSpeed>8.5</MoveSpeed>
            <ComfyTemperatureMin>-40</ComfyTemperatureMin>
			<ComfyTemperatureMax>150</ComfyTemperatureMax>
            <LeatherAmount>30</LeatherAmount>
			<RoyalFavorValue>2</RoyalFavorValue>
            <Flammability>0.05</Flammability>
            <ImmunityGainSpeed>1.8</ImmunityGainSpeed>
            <FoodPoisonChance>0.7</FoodPoisonChance>
            <MentalBreakThreshold>0.3</MentalBreakThreshold>
            <CarryingCapacity>100</CarryingCapacity>
        </statBases>

        <tools Inherit="False">
            <li>
			    <label>Left Claw</label>
			    <capacities>
				    <li>Scratch</li>
			    </capacities>
			    <power>20</power>
			    <cooldownTime>1.5</cooldownTime>
			    <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>

            <li>
                <label>Right Claw</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>20</power>
                <cooldownTime>1.5</cooldownTime>
                <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>

            <li>
                <label>Fire bite</label>
                <capacities>
                    <li>Firey_Bite</li>
                </capacities>
                <power>40</power>
                <cooldownTime>3.5</cooldownTime>
                <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>20</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
        </tools>
    </AlienRace.ThingDef_AlienRace>

    <AlienRace.RaceSettings>
        <defName>Harper_RaceSettings</defName>

        <pawnKindSettings>
            <alienrefugeekinds>
                <li>
                    <kindDefs>
                        <li>Harper_SpaceRefugee</li>
                    </kindDefs>
                    <chance>30.0</chance>
                </li>
            </alienrefugeekinds>
        </pawnKindSettings>
    </AlienRace.RaceSettings>
</Defs>