<?xml version="1.0" encoding="utf-8" ?>

<Defs>
    <!--Heart-->
    <ThingDef ParentName="BodyPartNaturalBase">
        <defName>Hawkimport_Heart</defName>
        <label>gryphon heart</label>
        <description>A biological gryphon heart. Pumps blood around the body.</description>
        <descriptionHyperlinks><RecipeDef>Hawkimport_InstallGryphHeart</RecipeDef></descriptionHyperlinks>
        <statBases>
        <MarketValue>1500</MarketValue>
        <Mass>3</Mass>
        </statBases>
    </ThingDef>
  
    <RecipeDef ParentName="SurgeryInstallBodyPartNaturalBase">
        <defName>Hawkimport_InstallGryphHeart</defName>
        <label>install gryphon heart</label>
        <description>Install a gryphon heart.</description>
        <jobString>Installing gryphon heart.</jobString>
        <workAmount>1600</workAmount>
        <skillRequirements>
        <Medicine>10</Medicine>
        </skillRequirements>
        <recipeUsers Inherit="false">
            <li>charred_raven_gryphon</li>
            <li>saberbeak_gryphon</li>
            <li>cream_gryphon</li>
        </recipeUsers>
        <ingredients>
        <li>
            <filter>
                <thingDefs>
                    <li>Hawkimport_Heart</li>
                </thingDefs>
            </filter>
            <count>1</count>
        </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Hawkimport_Heart</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Hawkimport_Heart</li>
        </appliedOnFixedBodyParts>
    </RecipeDef>

