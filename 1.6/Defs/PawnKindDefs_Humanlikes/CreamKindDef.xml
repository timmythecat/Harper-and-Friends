<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <PawnKindDef ParentName="BasePlayerPawnKind">
        <defName>CreamGryphon_Colonist</defName>
        <label>colonist</label>
        <race>cream_gryphon</race>
        <defaultFactionType>PlayerColony</defaultFactionType>

        <!-- This is a required field. 13~21 is the default value for Crashlanded player colonists. -->
        <initialResistanceRange>13~21</initialResistanceRange>
    </PawnKindDef>

    <PawnKindDef ParentName="SpaceRefugeeBase">
        <defName>CreamGryphon_SpaceRefugee</defName>
        <label>space refugee</label>
        <race>cream_gryphon</race>
        <combatPower>90</combatPower>
        <chemicalAddictionChance>0.05</chemicalAddictionChance>
        <apparelMoney>0~1000</apparelMoney>
        <initialWillRange>1~3</initialWillRange>
        <initialResistanceRange>12~19</initialResistanceRange>
    </PawnKindDef>

    <PawnKindDef>
        <defName>WildCreamGryph</defName>
        <label>wild cream gryphon</label>
        <labelPlural>wild Gryphon</labelPlural>
        <labelFemale>wild Gryphoness</labelFemale>
        <labelFemalePlural>wild Gryphoness</labelFemalePlural>
        <combatPower>60</combatPower>
        <race>cream_gryphon</race>
        <acceptArrestChanceFactor>0.4</acceptArrestChanceFactor>
        <backstoryFilters>
            <li>
                <categories>
                <li>Offworld</li>
                <li>Pirate</li>
                <li>Tribal</li>
                </categories>
            </li>
        </backstoryFilters>
        <backstoryCryptosleepCommonality>0.1</backstoryCryptosleepCommonality>
        <itemQuality>Poor</itemQuality>
        <chemicalAddictionChance>0.01</chemicalAddictionChance>
        <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
        <apparelIgnorePollution MayRequire="Ludeon.RimWorld.Biotech">true</apparelIgnorePollution>
        <techHediffsChance>0.03</techHediffsChance>
        <techHediffsMoney>50~100</techHediffsMoney>
        <techHediffsTags>
            <li>Poor</li>
        </techHediffsTags>
        <initialWillRange>2~4</initialWillRange>
        <initialResistanceRange>28~44</initialResistanceRange>
    </PawnKindDef>

    <PawnKindDef ParentName="Tribal_Hunter">
        <defName>Tribal_CreamGryph_Trader</defName>
        <label>trader</label>
        <combatPower>70</combatPower>
        <race>cream_gryphon</race>
        <trader>true</trader>
        <initialWillRange>2~4</initialWillRange>
        <initialResistanceRange>9~15</initialResistanceRange>
    </PawnKindDef>
    
    <PawnKindDef ParentName="SlaveBase">
        <defName>CreamGryph_Slave</defName>
        <label>gryphon slave</label>
        <combatPower>60</combatPower>
        <race>cream_gryphon</race>
        <invNutrition>2</invNutrition>
    </PawnKindDef>

    <PawnKindDef ParentName="TraderBase">
        <defName>CreamGryph_Trader</defName>
